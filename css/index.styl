@import './mixin'
@import './sample'

.text_center
	text-align center
ul
	list-style none
	margin 0
	padding 0
.monitor_permonth,.report_detail
	.right_main_list
		cursor pointer
a.bule_nav
	color white
.list_title_pic_o
	a
		display block
		&:hover
			text-decoration none
span.hint
	margin-right 10px
.list_main_p
	.table-striped > tbody > tr:nth-child(odd) > th
		background-color #ccc
	.table
		background-color #fff
.list_main
	border-radius 0 0 10px 10px
	padding-bottom 10px
	background #fff
	.table-striped > tbody > tr:nth-child(odd) > th
		background-color #ccc
	.table > tbody > tr > td
		padding 20px 8px
	a.bg_button
		text-align center
		color #333
		text-decoration none
		line-height 28px
a.bg_button
	text-align center
	color #333
	text-decoration none
	line-height 28px
.upload_button
	position relative
	.holder
		line-height 100px
	#fileupload
		width 100%
		height 100%
		position absolute
		visibility hidden
#progress
	display none
#progress.active
	display block
.upload_list_main
	table
		.remove_upload
			cursor pointer
			width 100px
			text-align right
			img
				margin-right 5px
.left_nav
	ul
		li.current
			background #445773
		li
			span.nav_icon_1
				width 35px
				height 31px
				background url("./images/newstyle_10.png") no-repeat
			span.nav_pic
				width 35px
				height 31px
			span.nav_icon_2
				background url("./images/newstyle_33.png") no-repeat
			span.nav_icon_3
				background url("./images/newstyle_38.png") no-repeat
			a.active
				background url("./images/newstyle_13.png") center right no-repeat
			a
				display block
				color white
				text-decoration none
		a.bule_nav:hover,a.active
			span.nav_icon_2
				background url("./images/newstyle2_33.png") no-repeat
			span.nav_icon_3
				background url("./images/newstyle2_38.png") no-repeat
		li.current,li:hover
			span.nav_icon_1
				background url("./images/newstyle2_10.png") no-repeat

li.right_nav_bg
	a
		color #333
		text-decoration none

.bg_button.bg_button_mouse_move
	background: url("./images/button_add.png") no-repeat;

.right_nav_bg.right_nav_down_bg
	background: url("./images/newstyle4_13down.png") no-repeat;

.date_select
	height 33px
	border-style none
	padding 0 5px
	border: 1px solid #cccccc
i
	font-style normal
table.table.no-m
	margin 0

.monitor_list
	td.no_indent
		text-indent 0
	td .txt
		width 50px
		text-align center
		display inline-block