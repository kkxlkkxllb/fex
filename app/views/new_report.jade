// 新建列表表单
.list_main
	form.form_bg(method='post' data-action='#' data-back="report/#{type}")
		table.form_main
			if type === "p"
				tr.form_no_bg
					td.form_width 姓名：
					td.form_width2
						input.form_input(type='text', name='name')
					td
			else
				tr.form_no_bg
					td.form_width 企业名称：
					td.form_width2
						input.form_input(type='text', name='company_name')
					td
				tr.form_gray_bg
					td 企业执照注册号：
					td
						input.form_input(type='text', name='company_code')
					td
				tr.form_no_bg
					td 银联商户编号：
					td
						input.form_input(type='text', name='mid')
					td 多个商户编号用逗号分隔
				tr.form_gray_bg
					td 企业主姓名：
					td
						input.form_input(type='text', name='owner_name')
					td
			tr.form_no_bg
				td 身份证号码：
				td
					input.form_input(type='text', name='identtfy_code')
				td
			tr.form_gray_bg
				td 银行卡号码：
				td
					input.form_input(type='text', name='card_code')
				td 多张银行卡用逗号分隔
			tr.form_no_bg
				td 认证材料：
				td(colspan='2')
